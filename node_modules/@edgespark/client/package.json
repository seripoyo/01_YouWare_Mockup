{
  "name": "@edgespark/client",
  "version": "1.0.2",
  "description": "edgespark umbrella client: auth UI/APIs plus HTTP utilities.",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.es.js",
  "unpkg": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "auth/styles/styles.css"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.es.js"
    },
    "./styles.css": "./auth/styles/styles.css",
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "npm run clean && npm run build:root",
    "build:root": "vite build -c vite.config.ts",
    "dev": "vite --config examples/dev/vite.config.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "better-auth": "^1.1.21"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "vite": "^5.4.0",
    "vite-plugin-dts": "^4.2.3"
  },
  "engines": {
    "node": ">=18"
  }
}
